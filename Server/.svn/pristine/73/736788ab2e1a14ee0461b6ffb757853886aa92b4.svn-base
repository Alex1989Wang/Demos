--
获取账户余额
--
finance/account_balance/:uid
方法:           GET

参数:    		:uid                                   //int用户uid
				currency                               //int币种  1：金币 2:代币(人民币) 3:xx
				
例子			finance/account_balance/1232322?currency=1&currency=2  	

返回:           json 格式
                {
                    code:                                     // int 错误代码
                        HTTP_EC_SUCCESS
                        HTTP_EC_SYS_ERROR 
                        HTTP_EC_UNKNOWN_ERROR
                        HTTP_EC_INVALID_ARGS                
                    msg:                                       // string 错误消息
					data:[currency_info ...]                   // 列表 账户所有的货币数量
                }

--
获取单个用户魅力榜
--
finance/glamour_board/:uid				
参数:    		:uid                                  //int 用户uid
				limit                                 //int 条数 最大100条
				offset                                //int 开始位置
				
例子			finance/glamour_board/1232322?limit=10&offset=0  

返回:           json 格式
                {
                    code:                                     // int 错误代码
                        HTTP_EC_SUCCESS
                        HTTP_EC_SYS_ERROR 
                        HTTP_EC_UNKNOWN_ERROR
                        HTTP_EC_INVALID_ARGS                
                    msg:                                      // string 错误消息
					data:[user_glamour_info ...]              // 按照贡献大小排列 
                }
				
				

				